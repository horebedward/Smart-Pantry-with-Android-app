<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:weightSum="1"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/onion"
            android:layout_width="wrap_content"
            android:id="@+id/onion"
            android:layout_weight="1"
            android:layout_height="110dp" />

        <ImageView
            android:src="@drawable/garlic"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:id="@+id/garlic"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:textAlignment="center">

        <TextView
            android:text="--"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView9"
            android:textSize="30sp"
            android:layout_weight="1"
            android:gravity="top|center_horizontal"
            android:textAlignment="center" />

        <TextView
            android:text="--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="0.94"
            android:textSize="30sp"
            android:gravity="top|center_horizontal"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ginger"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:id="@+id/ginger"
            android:layout_weight="1" />

        <ImageView
            android:src="@drawable/chilli"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:id="@+id/chilli"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center">

        <TextView
            android:text="--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_weight="0.93"
            android:textSize="30sp"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:text="--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_weight="0.96"
            android:textSize="30sp"
            android:gravity="center"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/potatoes"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:id="@+id/imageView26"
            android:layout_weight="1" />

        <ImageView
            android:src="@drawable/green"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:id="@+id/imageView25"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center">

        <TextView
            android:text="--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_weight="1"
            android:textSize="30sp"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:text="--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_weight="0.70"
            android:textSize="30sp"
            android:gravity="center"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="T: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_weight="0.25"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textSize="20sp" />

        <TextView
            android:text="--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTemp"
            android:layout_weight=".25"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:text="H: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight=".25"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textSize="20sp" />

        <TextView
            android:text="--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHumid"
            android:layout_weight=".25"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark" />

    </LinearLayout>


    <Button
        android:text="Check Pantry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/getlatest_btn"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

</LinearLayout>
</ScrollView>